block append script
	script.
		window.addEventListener('scroll', function () {
			const sections = document.querySelectorAll('.bl_topic_right .bl_topic_item');
			const images = document.querySelectorAll('.bl_stickyImg');
			let currentImage = null;

			sections.forEach((section) => {
				const rect = section.getBoundingClientRect();
				if (rect.top <= 0 && rect.bottom >= 0) {
					const imageId = section.getAttribute('data-image');
					currentImage = document.querySelector(`.bl_stickyImg[data-image="${imageId}"]`);
				}
			});

			if (currentImage) {
				images.forEach(image => {
					image.classList.remove('is_active');
				});
				currentImage.classList.add('is_active');
			}
		});

